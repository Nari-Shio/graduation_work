<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md">
    <h2 class="text-center text-2xl font-bold mb-6">パスワードをお忘れですか？</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 w-full border rounded-md" %>
      </div>

      <div class="actions mt-6">
        <%= f.submit "送信する", class: "w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
