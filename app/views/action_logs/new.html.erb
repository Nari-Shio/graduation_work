<h1 class="text-center text-2xl font-bold mb-6">行動記録の追加</h1>

<div class="max-w-md mx-auto bg-white p-8 rounded shadow">
  <%= form_with(model: [@post, @action_log], local: true) do |f| %>
    <% if @action_log.errors.any? %>
      <div class="text-red-500 mb-4">
        <h2>エラーがあります:</h2>
        <ul>
          <% @action_log.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :created_at, "時間", class: "block mb-1 font-semibold" %>
      <%= f.time_field :created_at, value: Time.current.strftime("%H:%M"), class: "border p-2 w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :place, "場所", class: "block mb-1 font-semibold" %>
      <%= f.text_field :place, class: "border p-2 w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :category, "行動の種類", class: "block mb-1 font-semibold" %>
      <%= f.text_field :category, class: "border p-2 w-full" %>
    </div>

    <div class="mb-4">
      <%= f.label :memo, "詳細", class: "block mb-1 font-semibold" %>
      <%= f.text_area :memo, rows: 5, class: "border p-2 w-full" %>
    </div>

    <div class="text-center">
      <%= f.submit "追加", class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to '戻る', action_logs_path, class: 'text-blue-500 hover:underline' %>
  </div>
</div>
