<h1 class="text-2xl font-bold text-center mb-6">行動記録一覧</h1>

<div class="max-w-4xl mx-auto">
  <%= link_to '新しい行動を記録', new_action_log_path, class: 'bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 mb-4 inline-block' %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <% @action_logs.each do |log| %>
      <div class="border p-4 rounded shadow bg-white">
        <div class="text-sm text-gray-500 mb-2">
          <%= log.date.strftime('%Y-%m-%d') if log.date %>
        </div>
        <h2 class="text-lg font-semibold mb-2"><%= log.place %></h2>
        <p class="text-gray-700 mb-4"><%= truncate(log.memo, length: 80) %></p>
        <%= link_to '詳細を見る', action_log_path(log), class: 'text-blue-500 hover:underline' %>
      </div>
    <% end %>
  </div>
</div>
